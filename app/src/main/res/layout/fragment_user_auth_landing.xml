<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AuthenticationViews.AuthFragments.UserAuthLanding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/authentication_greeter_header"
            android:gravity="center">

            <ImageView
                android:layout_width="256dp"
                android:layout_height="256dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="@string/Authentication_Greeter" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/authentication_greeter_header"
            android:layout_marginTop="24dp"
            android:gravity="center">

            <Button
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.Button.Icon"
                app:icon="@drawable/login_24px"
                android:text="@string/Fragment_Authentication_Login"
                android:id="@+id/proceedToLoginFragment"
                android:layout_marginRight="24dp"
                />

            <Button
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.Button.Icon"
                android:id="@+id/proceedToRegisterFragment"
                android:text="@string/Fragment_Authentication_Register"
                app:icon="@drawable/register_24px"
                />


        </LinearLayout>

    </RelativeLayout>




</FrameLayout>